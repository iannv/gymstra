<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gymstra" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/verde</item>
        <item name="colorSecondary">@color/azulOscuro</item>
        <item name="colorAccent">@color/azulClaro</item>

        <item name="colorOnPrimary">@color/azulOscuro</item>
        <item name="colorOnSecondary">@color/celeste</item>

        <item name="colorError">@color/rojo</item>

        <item name="android:fontFamily">@font/plus_jakarta_sans</item>

        <item name="android:textCursorDrawable">@drawable/cursor_color</item>

    </style>

    <style name="Theme.Gymstra" parent="Base.Theme.Gymstra" />
    <style name="Theme.Gymstra.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Gymstra.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Gymstra.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>